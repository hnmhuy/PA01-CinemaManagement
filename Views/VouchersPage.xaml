<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="CinemaManagement.Views.VouchersPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
    xmlns:local="using:CinemaManagement.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:CommunityToolkit.WinUI.UI.Controls"
    xmlns:wctprimitives="using:CommunityToolkit.WinUI.UI.Controls.Primitives"
    mc:Ignorable="d"
    xmlns:vm="using:CinemaManagement.ViewModels"
    x:Name="VoucherPage"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.DataContext>
        <vm:VoucherViewModel/>
    </Page.DataContext>

    <Page.Resources>
        <!--  Converter  -->
        <vm:TotalVouchersConverter x:Key="TotalVouchersConverter"/>
        <vm:StatusChangeColorConverter x:Key="StatusChangeColorConverter"/>
        <vm:StatusChangeTextConverter x:Key="StatusChangeTextConverter"/>
        <vm:StatusChangeConverter x:Key="StatusChangeConverter"/>
        <vm:TotalUseConverter x:Key="TotalUseConverter"/>




        <!--  Style  -->
        <Style x:Key="textboxSearch" TargetType="AutoSuggestBox">
            <Setter Property="Width" Value="300"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
        </Style>
        <Style x:Key="PivotItemStyle" TargetType="PivotItem">
            <Setter Property="Margin" Value="0"/>
            <Setter Property="Padding" Value="0"/>
        </Style>
        <Style x:Key="addButton" TargetType="Button" BasedOn="{StaticResource AccentButtonStyle}">
            <Setter Property="Background" Value="Beige"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        <!--Margin="12 5 5 12" FontSize="16" FontWeight="Bold"-->
        <Style x:Key="totalAmount" TargetType="TextBlock">
            <Setter Property="Margin" Value="12 5 0 12"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
        <Style x:Key="stackContent" TargetType="StackPanel">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Orientation" Value="Horizontal"/>
            <Setter Property="Padding" Value="10"/>
        </Style>

        <Style x:Key="imdbRating" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="#593900"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>

        </Style>

        <Style x:Key="imdbBorder" TargetType="Border">
            <Setter Property="Width" Value="46"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Background" Value="#ffe7c0"/>
            <Setter Property="BorderThickness" Value="1.25" />
            <Setter Property="BorderBrush" Value="#eba200" />
            <Setter Property="CornerRadius" Value="8"/>
        </Style>

        <Style x:Key="posterBorder" TargetType="Border">
            <Setter Property="Width" Value="50"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="CornerRadius" Value="8"/>
        </Style>

        <Style x:Key="BookDateTime" TargetType="Grid">
            <!--<Setter Property="Orientation" Value="Horizontal" />-->
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="Padding" Value="5" />
            <Setter Property="CornerRadius" Value="18" />
        </Style>


    </Page.Resources>

    <Grid HorizontalAlignment="Stretch"
       VerticalAlignment="Stretch" 
       Margin="20 20 20 20">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>





        <Border
            Grid.Row="1"
            Width="auto"
            Height="1"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Top"
            Background="LightGray" />


        <!--<Rectangle Grid.Row="1"
                   Height="0.5"
                   VerticalAlignment="Bottom"
                   Margin="0 70 0 20"
            Stroke="LightGray"
            Fill="Blue" />-->

        <!--<Rectangle Grid.Row="1"
            Stroke="Salmon"
            Fill="Transparent" 
            />

     <Rectangle Grid.Row="2"
            Stroke="OrangeRed"
            Fill="Transparent" />-->


        <TextBlock
            Padding="0 0 0 20"
             Grid.Row="0"
             Text="All Vouchers" FontSize="40" FontWeight="SemiBold"/>

        <StackPanel Style="{StaticResource stackContent}" Grid.Row="0" HorizontalAlignment="Right" Spacing="20">
            <AutoSuggestBox
                Width="300"
                VerticalAlignment="Center"
                HorizontalAlignment="Right"
                PlaceholderText="Type a control name"
                QueryIcon="Find"/>
            <Button Style="{StaticResource addButton}">
                <StackPanel Orientation="Horizontal">
                    <FontIcon Glyph="&#xE710;" Margin="0 0 5 0" />
                    <TextBlock Text="Add Voucher"/>
                </StackPanel>
            </Button>

        </StackPanel>


        <Grid
            DataContext="{x:Bind ViewModel}"
                Name="BookDateTime"
                Grid.Row="1"
                Style="{StaticResource BookDateTime}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Style="{StaticResource stackContent}" Grid.Column="0">
                <TextBlock Text="{Binding VouchersList, Converter={StaticResource ResourceKey=TotalVouchersConverter}}" Style="{StaticResource totalAmount}"/>
                <TextBlock Text=" Vouchers" Style="{StaticResource totalAmount}" Margin="0 5 0 12"/>
            </StackPanel>

            <StackPanel
                    Grid.Column="1"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Orientation="Horizontal"
                    Spacing="12">
                <TextBlock
                        VerticalAlignment="Center"
                        FontSize="15"
                        FontWeight="Bold"
                        Foreground="#E38B29"
                        Text="Date" />
                <DatePicker
                        Name="DatePicker"
                        Width="300"
                        HorizontalAlignment="Right"
                        YearVisible="False" />

                <!--  Vertical Line  -->
                <Border
                        Width="1"
                        Height="30"
                        VerticalAlignment="Center"
                        Background="LightGray" />

                <TextBlock
                        VerticalAlignment="Center"
                        FontSize="15"
                        FontWeight="Bold"
                        Foreground="#E38B29"
                        Text="Time" />

                <DropDownButton Content=". . : . . AM">
                    <DropDownButton.Flyout>
                        <MenuFlyout Placement="Bottom" />
                    </DropDownButton.Flyout>
                </DropDownButton>
            </StackPanel>
        </Grid>





        <!--Pivot content goes here-->

        <Grid Margin="0" Padding="0" Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>



            <Border Grid.Row="1" BorderThickness="1" BorderBrush="Black" CornerRadius="12" Background="#efefef">

                <controls:DataGrid
                      SelectionChanged="VoucherDataGrid_SelectionChanged" 
                    GridLinesVisibility="Horizontal"
                    CanUserReorderColumns="False" CanUserResizeColumns="False"
                    x:Name="ShowtimesDataGrid" Grid.Row="1"
                    AutoGenerateColumns="False"
                    SelectedItem="{Binding SelectedVoucher}"
                    ItemsSource="{Binding VouchersList}"
                >


                    <controls:DataGrid.Resources>

                        <Color x:Key="HeaderBackgroundColor">#FF60B560</Color>
                        <!-- Greenish color -->
                        <Color x:Key="HeaderHoveredBackgroundColor">#FFFFF700</Color>
                        <!-- Yellowish color -->
                        <Color x:Key="HeaderPressedBackgroundColor">#FF00e5ff</Color>
                        <!-- Blueish color -->

                        <!-- Override the default theme resources with your custom colors -->
                        <StaticResource x:Key="DataGridColumnHeaderBackgroundColor" ResourceKey="HeaderBackgroundColor"/>
                        <StaticResource x:Key="DataGridColumnHeaderHoveredBackgroundColor" ResourceKey="HeaderHoveredBackgroundColor"/>
                        <StaticResource x:Key="DataGridColumnHeaderPressedBackgroundColor" ResourceKey="HeaderPressedBackgroundColor"/>

                        <Style TargetType="wctprimitives:DataGridColumnHeader">
                            <Setter Property="FontWeight" Value="Bold" />
                            <Setter Property="HorizontalContentAlignment" Value="Center" />
                        </Style>
                        <Style TargetType="wctprimitives:DataGridRowHeader">
                            <Setter Property="Background" Value="DarkBlue"/>
                        </Style>

                    </controls:DataGrid.Resources>

                    <controls:DataGrid.Columns>

                        <controls:DataGridTemplateColumn Header="VoucherId" Width="SizeToHeader">
                            <controls:DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Voucher.VoucherId}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </DataTemplate>
                            </controls:DataGridTemplateColumn.CellTemplate>
                        </controls:DataGridTemplateColumn>

                        <controls:DataGridTemplateColumn Header="Code" Width="*">
                            <controls:DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Voucher.VoucherCode}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </DataTemplate>
                            </controls:DataGridTemplateColumn.CellTemplate>
                        </controls:DataGridTemplateColumn>
                        
                        
                        <!--<controls:DataGridTemplateColumn Header="Date" Width="SizeToCells">
                            <controls:DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Style="{StaticResource stackContent}">
                                        <ItemsControl ItemsSource="{Binding Converter={StaticResource ResourceKey=StatusChangeColorConverter}}">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <StackPanel Orientation="Horizontal" Spacing="5">
                                                        <Border BorderThickness="1" CornerRadius="10" Width="Auto" Padding="10 5" BorderBrush="{Binding Color}">
                                                            <TextBlock Text="{Binding Status}" VerticalAlignment="Center"/>
                                                        </Border>
                                                    </StackPanel>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </StackPanel>
                                </DataTemplate>
                            </controls:DataGridTemplateColumn.CellTemplate>
                        </controls:DataGridTemplateColumn>-->



                        <controls:DataGridTemplateColumn Header="Stautus" Width="SizeToCells">
                            <controls:DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Style="{StaticResource stackContent}">
                                        <Border BorderThickness="1" CornerRadius="10" Width="Auto" Padding="10 5">
                                            <Border.BorderBrush>
                                                <SolidColorBrush Color="{Binding Converter={StaticResource StatusChangeColorConverter}}"/>
                                            </Border.BorderBrush>
                                            <TextBlock Text="{Binding Converter={StaticResource StatusChangeTextConverter}}" VerticalAlignment="Center"/>
                                        </Border>
                                    </StackPanel>
                                </DataTemplate>
                            </controls:DataGridTemplateColumn.CellTemplate>
                        </controls:DataGridTemplateColumn>

                        <!--<controls:DataGridTemplateColumn Header="Date" Width="SizeToCells">
                            <controls:DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Style="{StaticResource stackContent}">
                                        <Border BorderThickness="1" CornerRadius="10" Width="Auto" Padding="10 5">
                                            <Border.Background>
                                                <SolidColorBrush Color="{Binding Converter={StaticResource StatusChangeConverter}, Path=Status}"/>
                                            </Border.Background>
                                            <TextBlock Text="{Binding Converter={StaticResource StatusChangeConverter}}" VerticalAlignment="Center"/>
                                        </Border>
                                    </StackPanel>
                                </DataTemplate>
                            </controls:DataGridTemplateColumn.CellTemplate>
                        </controls:DataGridTemplateColumn>-->

                        <controls:DataGridTemplateColumn Header="Amount" Width="SizeToHeader">
                            <controls:DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Voucher.VoucherAmount}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </DataTemplate>
                            </controls:DataGridTemplateColumn.CellTemplate>
                        </controls:DataGridTemplateColumn>

                        <controls:DataGridTemplateColumn Header="Total Use" Width="SizeToHeader">
                            <controls:DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Converter={StaticResource ResourceKey=TotalUseConverter}}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </DataTemplate>
                            </controls:DataGridTemplateColumn.CellTemplate>
                        </controls:DataGridTemplateColumn>

                        <controls:DataGridTemplateColumn Header="Action" Width="150">
                            <controls:DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" Spacing="10" HorizontalAlignment="Center">
                                        <Button Style="{StaticResource AccentButtonStyle}" Padding="10" >
                                            <FontIcon Glyph="&#xE70F;" FontFamily="{StaticResource FIcon}" FontSize="12" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                        </Button>
                                        <Button Style="{StaticResource AccentButtonStyle}" Padding="10" 
                                        Command="{Binding DeleteCommand}"
                                        CommandParameter="{Binding}"
                                    >
                                            <FontIcon Glyph="&#xE74D;" FontFamily="{StaticResource FIcon}" FontSize="12" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                        </Button>
                                    </StackPanel>
                                </DataTemplate>
                            </controls:DataGridTemplateColumn.CellTemplate>
                        </controls:DataGridTemplateColumn>


                    </controls:DataGrid.Columns>
                </controls:DataGrid>
            </Border>
        </Grid>








    </Grid>
</Page>
